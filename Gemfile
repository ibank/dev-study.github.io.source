source 'http://rubygems.org'

# Base gems
gem "rake"
gem "dotenv"

# Middleman
gem "middleman", "~> 3"
gem "middleman-livereload", "~> 3"
gem "wdm", "~> 0", :platforms => [:mswin, :mingw]

# Database gems
gem "sqlite3"
gem "activerecord"
gem "sinatra-activerecord"

# Formatter gems
gem "haml"
gem 'therubyracer'
gem "less"
gem "redcarpet"
gem "pygments.rb"

# Watch gems
# gem "shotgun"
gem "guard-rspec"
gem "guard-middleman"

# gems
gem "draper", "~> 1"
gem "httparty"

group :development, :test do
  # Test gems
  gem 'rspec'
  gem 'coveralls', require: false
  gem 'factory_girl', :require => false
  gem 'faker'
  gem 'database_cleaner', '=1.0.1'
  gem 'shoulda'
  gem "capybara"
end
